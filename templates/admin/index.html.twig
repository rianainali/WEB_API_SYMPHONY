{% extends 'base.html.twig' %}

{% block title %}Administrator index{% endblock %}

{% block body %}
    <h1>Administrator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Job</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrator in administrators %}
            <tr>
                <td>{{ administrator.id }}</td>
                <td>{{ administrator.name }}</td>
                <td>{{ administrator.job }}</td>
                <td>
                    <a href="{{ path('app_admin_show', {'id': administrator.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i> Show</a>
                    <a href="{{ path('app_admin_edit', {'id': administrator.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_new') }}"><button type="button" class="btn btn-primary">Create new</button></a>
    <a href="{{ path('app_log') }}"><button type="button" class="btn btn-primary">Return to LogController</button> </a>

{% endblock %}
