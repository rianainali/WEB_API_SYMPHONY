{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Level</th>
                <th>Stream</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.level }}</td>
                <td>{{ student.stream }}</td>
                <td>
                    <a href="{{ path('app_admin_show', {'id': student.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i> Show</a>
                    <a href="{{ path('app_admin_edit', {'id': student.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stdnt_new') }}"><button type="button" class="btn btn-primary">Create new</button></a>
    <a href="{{ path('app_log') }}"><button type="button" class="btn btn-primary">Return to LogController</button> </a>

{% endblock %}
